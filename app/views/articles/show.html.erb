<h2 align="center">Title: <%= @article.title %></h2>

  <link href="https://vjs.zencdn.net/7.2.4/video-js.css" rel="stylesheet">

  <!-- If you'd like to support IE8 (for Video.js versions prior to v7) -->
  <script src="https://vjs.zencdn.net/ie8/ie8-version/videojs-ie8.min.js"></script>
<div class="well col-xs-8 col-xs-offset-2">
	<% if @article.user %>
	<ul class="listing">
		<div class="row" align="center">
			<div class="col-md-4 col-md-offset-4">
				<li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
				<li class="article-title"><%= link_to @article.user.username, user_path(@article.user) %></li>
				<li><small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small></li>
				<div style="width:400px; height:auto">
<%= image_tag(@article.image, style: "width:100%") %>
</div>
			<div style="width:400px; height:auto">
	<video id="my-video" class="video-js" controls preload="auto" width="440" height="264"
    <source src="<%= url_for(@article.video) %>" type='video/mp4'>
   
  </video>
</div>
			</div>
		</div>
	</ul>	
	<% end %>
	<%= link_to 'View file', @article.file %>
	<%= link_to 'Download', @article.file, download: '' %>
	<h4 class="center description"><strong>Description:</strong></h4>
	<hr>
	<%= simple_format(@article.description) %>
	<div class="article-actions">
	<%= link_to "Edit", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
	<%= link_to "Delete", article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, class: "btn btn-xs btn-danger" %>
	<%= link_to "Back", articles_path, class: "btn btn-xs btn-success" %>
	</div>
</div>
  <script src="https://vjs.zencdn.net/7.2.4/video.js"></script>